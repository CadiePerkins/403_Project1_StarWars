@model IEnumerable<_403_Project1_StarWars.Models.FavQuote>

@{
    ViewBag.Title = "Display Quotes";
}

<h2>Favorite Quotes</h2>

<p>
    @Html.ActionLink("Add a Quote", "AddQuote")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuoteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MovieTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CharacterName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuoteID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MovieTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quote)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CharacterName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditQuote", new { iQuote=item.QuoteID  }) 
        </td>
    </tr>
}

</table>
<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>