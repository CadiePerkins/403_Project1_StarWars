@model _403_Project1_StarWars.Models.MovieReview

@{
    ViewBag.Title = "Hoth";
}

<h2>Edit Review</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
   
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <!--Don't need to edit the ReviewID since that is primary key-->

        <div class="form-group">
            @Html.LabelFor(model => model.MovieTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MovieTitle, new SelectList(ViewBag.Movies, "MovieID", "MovieTitle"))
                @Html.ValidationMessageFor(model => model.MovieTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Review, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="MovieReview" name="MoviewReview">
                    <option selected disabled>Choose one</option>
                    <option>Great</option>
                    <option>Good</option>
                    <option>Bad</option>
                    <option>Awful</option>
                </select>
                @Html.ValidationMessageFor(model => model.Review, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Mustafar", "Index", "Home")
</div>
